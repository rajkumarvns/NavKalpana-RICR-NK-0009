<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="bg-black text-white font-[Poppins] min-h-screen">
    <%- include('partials/nav') %>

    <div class="max-w-5xl mx-auto py-10 px-6 no-print">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-black italic text-indigo-500">RESUME INTELLIGENCE REPORT</h1>
            <button onclick="window.print()" class="bg-indigo-600 hover:bg-indigo-500 px-6 py-2 rounded-full font-bold transition-all shadow-lg flex items-center gap-2">
                <span>Download PDF</span> ⬇️
            </button>
        </div>
    </div>

    <div id="printableReport" class="max-w-4xl mx-auto bg-white text-slate-900 p-12 rounded-xl shadow-2xl mb-20 relative overflow-hidden">
        <div class="absolute top-0 right-0 p-10 opacity-10 pointer-events-none">
            <h1 class="text-8xl font-black">ACIE</h1>
        </div>

        <header class="border-b-4 border-indigo-600 pb-6 mb-8 flex justify-between items-end">
            <div>
                <h2 id="targetRole" class="text-4xl font-black uppercase text-indigo-900 font-serif italic tracking-tight">LOADING...</h2>
                <p class="text-slate-500 font-bold tracking-widest">ANALYSIS DATE: <%= new Date().toLocaleDateString() %></p>
            </div>
            <div class="text-right">
                <div class="text-5xl font-black text-indigo-600"><span id="finalScore">0</span>%</div>
                <p class="text-xs uppercase font-bold text-slate-400">Strength Score</p>
            </div>
        </header>

        <div id="metricsGrid" class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-10">
            </div>

        <div class="space-y-8">
            <section>
                <h3 class="text-xl font-bold text-indigo-900 mb-3 border-l-4 border-indigo-600 pl-3">Summary Report</h3>
                <p id="analysisReport" class="text-slate-700 leading-relaxed italic">Analyzing your profile...</p>
            </section>

            <div class="grid md:grid-cols-2 gap-8">
                <section>
                    <h3 class="text-lg font-bold text-green-700 mb-3 uppercase tracking-tight">Extracted Skills</h3>
                    <div id="extractedSkills" class="flex flex-wrap gap-2"></div>
                </section>
                <section>
                    <h3 class="text-lg font-bold text-red-700 mb-3 uppercase tracking-tight">Missing Competencies</h3>
                    <div id="missingSkills" class="flex flex-wrap gap-2"></div>
                </section>
            </div>

            <section class="bg-indigo-50 p-6 rounded-xl border border-indigo-100">
                <h3 class="text-lg font-bold text-indigo-900 mb-3">Interview Focus Areas (Weak Topics)</h3>
                <ul id="weakTopics" class="list-disc list-inside text-indigo-800 space-y-1"></ul>
            </section>
        </div>

        <footer class="mt-12 pt-6 border-t border-slate-100 text-center text-slate-400 text-sm italic">
            This report is AI-generated by ACIE Engine for professional auditing purposes.
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const token = localStorage.getItem('token');
            if (!token) { window.location.href = "/login"; return; }

            try {
                const res = await fetch('/api/ai/report-data', {
                    method: 'GET',
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const result = await res.json();

                if (result.success) {
                    const data = result.data;

                    // 1. Text Data Update
                    document.getElementById('targetRole').innerText = data.targetRole || "DOMAIN NOT DETECTED";
                    document.getElementById('finalScore').innerText = data.finalStrengthScore || 0;
                    document.getElementById('analysisReport').innerText = data.analysisReport || "Summary not available.";

                    // 2. Metrics Injection
                    const metricsArr = [
                        { label: 'Skills', val: data.metrics.skillRelevance, color: 'bg-blue-500' },
                        { label: 'Projects', val: data.metrics.projectDepth, color: 'bg-purple-500' },
                        { label: 'Experience', val: data.metrics.experienceScore, color: 'bg-cyan-500' },
                        { label: 'Structure', val: data.metrics.structureScore, color: 'bg-indigo-500' }
                    ];

                    const metricsGrid = document.getElementById('metricsGrid');
                    metricsGrid.innerHTML = metricsArr.map(m => `
                        <div class="bg-slate-50 p-4 rounded-lg border border-slate-200">
                            <p class="text-xs uppercase font-bold text-slate-400 mb-1">${m.label}</p>
                            <div class="text-2xl font-black text-slate-800">${m.val}%</div>
                            <div class="w-full bg-slate-200 h-1.5 mt-2 rounded-full overflow-hidden">
                                <div class="${m.color} h-full" style="width: ${m.val}%"></div>
                            </div>
                        </div>
                    `).join('');

                    // 3. Lists Injection (Skills, Missing, Weak)
                    const renderBadges = (id, list, color) => {
                        const container = document.getElementById(id);
                        container.innerHTML = list.map(item => `
                            <span class="bg-${color}-50 text-${color}-700 px-3 py-1 rounded-md text-sm border border-${color}-100 font-medium">${item}</span>
                        `).join('');
                    };

                    renderBadges('extractedSkills', data.extractedSkills, 'green');
                    renderBadges('missingSkills', data.missingSkills, 'red');

                    document.getElementById('weakTopics').innerHTML = data.weakTopics.map(topic => `
                        <li>${topic}</li>
                    `).join('');

                } else {
                    alert("Bhai, report data nahi mila. Analysis pehle kar lo.");
                }
            } catch (err) {
                console.error("Report Load Error:", err);
            }
        });
    </script>

    <style>
        @media print {
            body { background: white !important; color: black !important; }
            .no-print, nav, .fixed { display: none !important; }
            #printableReport { margin: 0 !important; box-shadow: none !important; width: 100% !important; padding: 0 !important; }
            @page { size: A4; margin: 1cm; }
        }
    </style>
</body>
</html>