<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> 
<body class="bg-black text-white font-[Poppins] min-h-screen overflow-x-hidden">

    <%- include('partials/nav') %> 

    <div class='fixed inset-0 -z-10 pointer-events-none'>
        <div class='absolute left-1/2 top-20 -translate-x-1/2 w-[600px] h-[300px] bg-indigo-800/20 rounded-full blur-[120px]'></div>
        <div class='absolute right-0 bottom-0 w-[300px] h-[300px] bg-blue-900/10 rounded-full blur-[100px]'></div>
    </div>

    <div class="max-w-4xl mx-auto py-12 px-6">
        <div class="text-center mb-16">
            <h1 class="text-4xl md:text-6xl font-black tracking-tight mb-4">
                Resume <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400">Intelligence</span>
            </h1>
            <p class="text-slate-400 text-lg max-w-2xl mx-auto px-4">Select your goal and let AI audit your resume against industry standards.</p>
        </div>

        <div class="bg-white/5 backdrop-blur-2xl p-8 md:p-12 rounded-[40px] border border-white/10 shadow-2xl">
            <form id="analysisForm" enctype="multipart/form-data" class="space-y-10">
                
                <div class="space-y-4">
                    <label class="text-indigo-400 font-bold ml-4 text-sm uppercase tracking-widest">Target Career Role</label>
                    <select name="targetRole" id="targetRole" required class="w-full bg-black/50 border border-white rounded-2xl px-6 py-4 text-white outline-none focus:ring-2 focus:ring-indigo-500 transition-all appearance-none cursor-pointer">
                        <option value="" disabled selected>Select the role you are applying for...</option>
                        <option value="Full Stack Developer (MERN/Java)">Full Stack Developer</option>
                        <option value="Frontend Developer">Frontend Developer</option>
                        <option value="Backend Developer">Backend Developer</option>
                        <option value="Data Scientist / Analyst">Data Scientist / Analyst</option>
                        <option value="DevOps Engineer">DevOps Engineer</option>
                        <option value="Software Testing / QA">Software Testing / QA</option>
                        <option value="Cybersecurity Analyst">Cybersecurity Analyst</option>
                        <option value="Cloud Architect">Cloud Architect</option>
                    </select>
                </div>

                <div class="flex p-1.5 bg-black/50 rounded-full border border-white/10 w-fit mx-auto mb-4">
                    <button type="button" onclick="setInputMode('pdf')" id="pdfBtn" class="px-8 py-2.5 rounded-full text-sm font-bold transition-all bg-indigo-600 text-white shadow-lg">Upload PDF</button>
                    <button type="button" onclick="setInputMode('text')" id="textBtn" class="px-8 py-2.5 rounded-full text-sm font-bold transition-all text-slate-400 hover:text-white">Paste Text</button>
                </div>
                
                <input type="hidden" name="inputType" id="inputType" value="pdf">

                <div id="pdfSection" class="transition-all duration-500">
                    <div id="dropZone" class="border-2 border-dashed border-white/10 rounded-[40px] p-16 text-center hover:border-indigo-500/50 transition-all group cursor-pointer bg-white/[0.02]">
                        <input type="file" name="resumeFile" id="resumeFile" class="hidden" accept=".pdf">
                        <div class="text-6xl mb-6 group-hover:scale-110 transition-transform">ðŸ“„</div>
                        <h3 class="text-white text-xl font-bold mb-2">Drop your resume here</h3>
                        <p id="fileStatus" class="text-slate-500">AI will compare your profile with the selected role</p>
                    </div>
                </div>

                <div id="textSection" class="hidden transition-all duration-500">
                    <textarea name="resumeText" id="resumeText" rows="10" 
                        placeholder="Paste your professional experience here..." 
                        class="w-full bg-black/40 border border-white/10 rounded-[40px] px-8 py-6 text-white outline-none focus:ring-2 focus:ring-indigo-500 transition-all resize-none"></textarea>
                </div>

                <button type="submit" id="submitBtn" class="w-full bg-indigo-600 text-white py-5 rounded-full font-black text-xl hover:bg-indigo-500 transition-all transform hover:scale-[1.02] shadow-[0_0_40px_rgba(79,70,229,0.2)] flex items-center justify-center gap-4">
                    <span id="btnText">Execute Smart Analysis</span>
                    <div id="loader" class="hidden w-6 h-6 border-4 border-white/30 border-t-white rounded-full animate-spin"></div>
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function setInputMode(mode) {
            document.getElementById('inputType').value = mode;
            const pdfSection = document.getElementById('pdfSection');
            const textSection = document.getElementById('textSection');
            const pdfBtn = document.getElementById('pdfBtn');
            const textBtn = document.getElementById('textBtn');

            if(mode === 'pdf') {
                pdfSection.classList.remove('hidden');
                textSection.classList.add('hidden');
                pdfBtn.classList.add('bg-indigo-600', 'text-white');
                textBtn.classList.remove('bg-indigo-600', 'text-white');
            } else {
                pdfSection.classList.add('hidden');
                textSection.classList.remove('hidden');
                textBtn.classList.add('bg-indigo-600', 'text-white');
                pdfBtn.classList.remove('bg-indigo-600', 'text-white');
            }
        }

        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('resumeFile');
        dropZone.onclick = () => fileInput.click();
        fileInput.onchange = () => {
            if(fileInput.files.length > 0) {
                document.getElementById('fileStatus').innerText = "Selected: " + fileInput.files[0].name;
                document.getElementById('fileStatus').classList.add('text-indigo-400', 'font-bold');
            }
        };

        document.getElementById('analysisForm').onsubmit = async (e) => {
            e.preventDefault();
            const btn = document.getElementById('submitBtn');
            const btnText = document.getElementById('btnText');
            const loader = document.getElementById('loader');

            btn.disabled = true;
            btnText.innerText = "Analyzing Against Career Goal...";
            loader.classList.remove('hidden');

            const formData = new FormData(e.target);
            try {
                const res = await fetch('/api/ai/analyze', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` },
                    body: formData
                });
                
                const result = await res.json();
                
                if(result.success) {
                    Swal.fire({
                        title: 'Audit Complete! ðŸš€',
                        text: `Bhai, aapka analysis ready hai for ${result.data.targetRole}`,
                        icon: 'success',
                        background: 'rgba(15, 23, 42, 0.95)',
                        confirmButtonColor: '#4F46E5'
                    }).then(() => {
                        window.location.href = "/dashboard";
                    });
                } else {
                    throw new Error(result.message || "Analysis failed");
                }
            } catch(err) {
                console.error(err);
                Swal.fire({
                    title: 'Opps!',
                    text: err.message || 'AI Analysis fail ho gayi bhai!',
                    icon: 'error',
                    background: 'rgba(15, 23, 42, 0.95)',
                    confirmButtonColor: '#ef4444'
                });
            } finally {
                btn.disabled = false;
                loader.classList.add('hidden');
                btnText.innerText = "Execute Smart Analysis";
            }
        };
    </script>
</body>
</html>